<Window x:Class="PGInstaller.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authentication Required" 
        Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#2C3E50"
        AllowsTransparency="True">

    <Border BorderBrush="#34495E" BorderThickness="1" CornerRadius="5">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="PG-AIO SECURITY" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Enter access key to proceed" 
                           Foreground="#BDC3C7" 
                           FontSize="12" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,0"/>
            </StackPanel>

            <PasswordBox x:Name="TxtPassword"
                         Grid.Row="1"
                         Height="35"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         FontSize="16"
                         Padding="5"
                         Margin="20,0"
                         KeyDown="TxtPassword_KeyDown"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="EXIT"
                        Click="BtnExit_Click"
                        Width="100" Height="35" Margin="0,0,10,0"
                        Background="#C0392B" Foreground="White" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="3"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="UNLOCK"
                        Click="BtnLogin_Click"
                        Width="100" Height="35"
                        Background="#27AE60" Foreground="White" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="3"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
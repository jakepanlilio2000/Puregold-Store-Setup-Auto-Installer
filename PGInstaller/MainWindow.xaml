<Window
    x:Class="PGInstaller.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PGInstaller.Viewmodel"
    Title="PG-AIO Installer (Beta 5)"
    Width="1150"
    Height="800"
    MinWidth="1000"
    MinHeight="700"
    Background="#F9FAFB"
    FontFamily="Segoe UI"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <SolidColorBrush x:Key="PGGreen" Color="#00843D" />
        <SolidColorBrush x:Key="PGDarkGreen" Color="#005C2B" />
        <SolidColorBrush x:Key="PGGold" Color="#F2C94C" />
        <SolidColorBrush x:Key="PGRed" Color="#C0392B" />
        <SolidColorBrush x:Key="PGPurple" Color="#8E44AD" />
        <SolidColorBrush x:Key="PGBlue" Color="#2980B9" />
        <SolidColorBrush x:Key="PGTextDark" Color="#2C3E50" />
        <SolidColorBrush x:Key="PGTextLight" Color="#7F8C8D" />

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="270"
                        Opacity="0.05"
                        ShadowDepth="2"
                        Color="Black" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernBtn" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PGGreen}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding Content}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6" />
                                <Setter TargetName="border" Property="Background" Value="#BDC3C7" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="#F3F4F6" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="Background" Value="White" />
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PGGreen}" />
                                <Setter TargetName="border" Property="BorderThickness" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource PGDarkGreen}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,30">
                    <TextBlock
                        FontSize="26"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="PG INSTALLER" />
                    <TextBlock
                        FontSize="12"
                        Foreground="#A3E635"
                        Text="AIO Installer for store setup" />
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,0,0,25">
                    <TextBlock
                        Margin="0,0,0,6"
                        FontSize="11"
                        FontWeight="Bold"
                        Foreground="#86EFAC"
                        Text="TARGET DEPARTMENT" />
                    <ComboBox
                        Height="40"
                        Padding="10,0"
                        VerticalContentAlignment="Center"
                        Background="White"
                        FontSize="14"
                        ItemsSource="{Binding Departments}"
                        SelectedItem="{Binding SelectedDepartment}">
                        <ComboBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </StackPanel>

                <Expander
                    Grid.Row="2"
                    Margin="0,0,0,20"
                    Header="NETWORK SETTINGS">
                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontWeight="SemiBold"
                                Foreground="White"
                                Text="{Binding}" />
                        </DataTemplate>
                    </Expander.HeaderTemplate>
                    <Border
                        Margin="0,10,0,0"
                        Padding="12"
                        Background="#004d24"
                        CornerRadius="6">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="#D1D5DB"
                                        Text="IP ADDRESS" />
                                    <TextBox
                                        Margin="0,2,0,0"
                                        Background="#00381a"
                                        Foreground="White"
                                        Text="{Binding TargetIp}" />
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="#D1D5DB"
                                        Text="GATEWAY" />
                                    <TextBox
                                        Margin="0,2,0,0"
                                        Background="#00381a"
                                        Foreground="White"
                                        Text="{Binding TargetGateway}" />
                                </StackPanel>
                            </Grid>

                            <TextBlock
                                FontSize="10"
                                Foreground="#D1D5DB"
                                Text="PRIMARY DNS" />
                            <TextBox
                                Margin="0,2,0,12"
                                Background="#00381a"
                                Foreground="White"
                                Text="{Binding TargetDns}" />

                            <Button
                                Height="32"
                                Background="{StaticResource PGGold}"
                                Command="{Binding ChangeIpCommand}"
                                Content="APPLY CONFIG"
                                Foreground="{StaticResource PGTextDark}"
                                Style="{StaticResource ModernBtn}" />
                        </StackPanel>
                    </Border>
                </Expander>

                <Grid Grid.Row="3" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Margin="0,0,0,6"
                        FontSize="11"
                        FontWeight="Bold"
                        Foreground="#86EFAC"
                        Text="INSTALL MANIFEST" />
                    <Border
                        Grid.Row="1"
                        Padding="4"
                        Background="#004d24"
                        CornerRadius="6">
                        <ListBox
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#E5E7EB"
                            ItemsSource="{Binding PreviewList}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="6,4" />
                                    <Setter Property="FontSize" Value="12" />
                                    <Setter Property="IsHitTestVisible" Value="False" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border
                                                    x:Name="Bd"
                                                    Padding="{TemplateBinding Padding}"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    SnapsToDevicePixels="true">
                                                    <ContentPresenter
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>
                </Grid>

                <Button
                    Grid.Row="4"
                    Height="50"
                    Background="{StaticResource PGGold}"
                    Command="{Binding InstallCommand}"
                    Content="START INSTALLATION"
                    FontSize="16"
                    Foreground="{StaticResource PGTextDark}"
                    Style="{StaticResource ModernBtn}">
                    <Button.Effect>
                        <DropShadowEffect
                            BlurRadius="10"
                            Direction="270"
                            Opacity="0.3"
                            ShadowDepth="3"
                            Color="Black" />
                    </Button.Effect>
                </Button>

                <TextBlock
                    Grid.Row="5"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    FontSize="10"
                    Foreground="#6EE7B7"
                    Text="Ensure 'Assets' folder is present." />
            </Grid>
        </Border>

        <ScrollViewer
            Grid.Column="1"
            Padding="30"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{StaticResource PGTextDark}"
                    Text="Quick Maintenance" />
                <Border Margin="0,0,0,30" Style="{StaticResource CardStyle}">
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="0"
                            Height="80"
                            Background="{StaticResource PGRed}"
                            Command="{Binding RunDefenderCommand}"
                            Style="{StaticResource ModernBtn}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="16"
                                    Text="🛡️" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    FontWeight="Bold"
                                    Text="Disable Defender" />
                            </StackPanel>
                        </Button>

                        <Button
                            Grid.Column="2"
                            Height="80"
                            Background="{StaticResource PGPurple}"
                            Command="{Binding RunDebloatCommand}"
                            Style="{StaticResource ModernBtn}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="16"
                                    Text="🚀" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    FontWeight="Bold"
                                    Text="Debloat Windows" />
                            </StackPanel>
                        </Button>

                        <Button
                            Grid.Column="4"
                            Height="80"
                            Background="{StaticResource PGBlue}"
                            Command="{Binding RunActivatorCommand}"
                            Style="{StaticResource ModernBtn}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="16"
                                    Text="🔑" />
                                <TextBlock
                                    Margin="0,5,0,0"
                                    FontWeight="Bold"
                                    Text="Activate Windows" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{StaticResource PGTextDark}"
                    Text="Medicine Cabinet" />
                <Border Margin="0,0,0,30" Style="{StaticResource CardStyle}">
                    <Grid Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="12"
                                Foreground="{StaticResource PGTextLight}"
                                Text="Select Tool to Launch" />
                            <ComboBox
                                Height="45"
                                Padding="10,0"
                                VerticalContentAlignment="Center"
                                Background="#F3F4F6"
                                BorderBrush="#E5E7EB"
                                FontSize="14"
                                ItemsSource="{Binding MedicineList}"
                                SelectedItem="{Binding SelectedMedicineName}">
                                <ComboBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6" />
                                    </Style>
                                </ComboBox.Resources>
                            </ComboBox>
                        </StackPanel>

                        <Button
                            Grid.Column="2"
                            Height="45"
                            VerticalAlignment="Bottom"
                            Background="{StaticResource PGTextDark}"
                            Command="{Binding RunMedicineCommand}"
                            Content="LAUNCH TOOL"
                            Style="{StaticResource ModernBtn}" />
                    </Grid>
                </Border>

                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{StaticResource PGTextDark}"
                    Text="Live Terminal" />
                <Border
                    Height="300"
                    Background="#1E1E1E"
                    CornerRadius="8">
                    <Grid>
                        <TextBox
                            Margin="15"
                            Background="Transparent"
                            BorderThickness="0"
                            FontFamily="Consolas"
                            FontSize="13"
                            Foreground="#00FF00"
                            IsReadOnly="True"
                            Text="{Binding LogOutput}"
                            TextChanged="TextBox_TextChanged"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />

                        <Border
                            Background="#CC005C2B"
                            CornerRadius="8"
                            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="PROCESSING REQUEST..." />
                                <ProgressBar
                                    Width="300"
                                    Height="6"
                                    Margin="0,15,0,0"
                                    Background="#00381a"
                                    BorderThickness="0"
                                    Foreground="{StaticResource PGGold}"
                                    IsIndeterminate="True" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
<Window
    x:Class="PGInstaller.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PGInstaller.Viewmodel"
    Title="PG-AIO Installer (BETA)"
    Width="1000"
    Height="760"
    Background="#F0F2F5"
    FontFamily="Segoe UI"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,25"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="SETUP WIZARD" />

                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="11"
                        FontWeight="SemiBold"
                        Foreground="#BDC3C7"
                        Text="Department Profile" />
                    <ComboBox
                        Height="40"
                        Padding="10,0"
                        VerticalContentAlignment="Center"
                        Background="White"
                        FontSize="14"
                        ItemsSource="{Binding Departments}"
                        SelectedItem="{Binding SelectedDepartment}">
                        <ComboBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </StackPanel>

                <Expander
                    Grid.Row="2"
                    Margin="0,0,0,20"
                    Foreground="White"
                    Header="Network Configuration">
                    <Border
                        Margin="0,5,0,0"
                        Padding="15"
                        Background="#34495E"
                        CornerRadius="5">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="#ECF0F1"
                                        Text="IP Address" />
                                    <TextBox
                                        Margin="0,2,0,0"
                                        Padding="4"
                                        Text="{Binding TargetIp}" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="#ECF0F1"
                                        Text="Gateway" />
                                    <TextBox
                                        Margin="0,2,0,0"
                                        Padding="4"
                                        Text="{Binding TargetGateway}" />
                                </StackPanel>
                            </Grid>

                            <TextBlock
                                FontSize="10"
                                Foreground="#ECF0F1"
                                Text="Primary DNS" />
                            <TextBox
                                Margin="0,2,0,8"
                                Padding="4"
                                Text="{Binding TargetDns}" />

                            <Button
                                Height="30"
                                Background="#E67E22"
                                BorderThickness="0"
                                Command="{Binding ChangeIpCommand}"
                                Content="APPLY NETWORK"
                                Cursor="Hand"
                                FontWeight="Bold"
                                Foreground="White">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </Border>
                </Expander>

                <StackPanel Grid.Row="3" Margin="0,0,0,20">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="11"
                        FontWeight="SemiBold"
                        Foreground="#BDC3C7"
                        Text="Package Preview" />
                    <Border
                        Padding="5"
                        Background="#34495E"
                        CornerRadius="5">
                        <ListBox
                            Height="150"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#ECF0F1"
                            ItemsSource="{Binding PreviewList}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto" />
                    </Border>
                </StackPanel>

                <TextBlock
                    Grid.Row="4"
                    Margin="0,0,0,5"
                    FontSize="11"
                    FontWeight="Bold"
                    Foreground="#95A5A6"
                    Text="MAINTENANCE TOOLS" />

                <Grid Grid.Row="5" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        Height="35"
                        Margin="0,0,5,10"
                        Background="#C0392B"
                        BorderThickness="0"
                        Command="{Binding RunDefenderCommand}"
                        Content="NO DEFENDER"
                        Cursor="Hand"
                        FontSize="11"
                        FontWeight="Bold"
                        Foreground="White">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        Height="35"
                        Margin="5,0,0,10"
                        Background="#8E44AD"
                        BorderThickness="0"
                        Command="{Binding RunDebloatCommand}"
                        Content="DEBLOAT"
                        Cursor="Hand"
                        FontSize="11"
                        FontWeight="Bold"
                        Foreground="White">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Height="40"
                        Background="#2980B9"
                        BorderThickness="0"
                        Command="{Binding RunActivatorCommand}"
                        Content="ACTIVATE WINDOWS"
                        Cursor="Hand"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="White">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <Button
                    Grid.Row="6"
                    Height="50"
                    Background="#27AE60"
                    BorderThickness="0"
                    Command="{Binding InstallCommand}"
                    Content="START INSTALLATION"
                    Cursor="Hand"
                    FontSize="15"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock
                    Grid.Row="7"
                    Margin="0,15,0,0"
                    HorizontalAlignment="Center"
                    FontSize="10"
                    Foreground="#7F8C8D"
                    Text="PG-AIO Offline Installer v0.1" />
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="0,0,0,15"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="#34495E"
                Text="Activity Log" />

            <Border
                Grid.Row="1"
                Background="White"
                BorderBrush="#DCDCDC"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <TextBox
                        Margin="10"
                        BorderThickness="0"
                        FontFamily="Consolas"
                        FontSize="13"
                        IsReadOnly="True"
                        Text="{Binding LogOutput}"
                        TextChanged="TextBox_TextChanged"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />

                    <Border Background="#CCFFFFFF" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="#2C3E50"
                                Text="PROCESSING..." />
                            <ProgressBar
                                Width="250"
                                Height="6"
                                Margin="0,15,0,0"
                                Background="#ECF0F1"
                                BorderThickness="0"
                                Foreground="#27AE60"
                                IsIndeterminate="True" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
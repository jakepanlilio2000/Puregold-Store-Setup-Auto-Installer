<Window
    x:Class="PGInstaller.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PGInstaller.Viewmodel"
    Title="PG-AIO Installer"
    Width="950"
    Height="700"
    Background="#F0F2F5"
    FontFamily="Segoe UI"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,20"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="SETUP WIZARD" />

                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="12"
                        Foreground="#BDC3C7"
                        Text="Select Department" />
                    <ComboBox
                        Height="35"
                        Padding="10,0"
                        VerticalContentAlignment="Center"
                        Background="White"
                        FontSize="13"
                        ItemsSource="{Binding Departments}"
                        SelectedItem="{Binding SelectedDepartment}">
                        <ComboBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </StackPanel>

                <Expander
                    Grid.Row="2"
                    Margin="0,0,0,15"
                    Foreground="White"
                    Header="Network Configuration"
                    IsExpanded="False">
                    <Border
                        Margin="0,5,0,0"
                        Padding="10"
                        Background="#34495E"
                        CornerRadius="5">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,2"
                                FontSize="10"
                                Foreground="#ECF0F1"
                                Text="IP Address" />
                            <TextBox
                                Margin="0,0,0,8"
                                Padding="3"
                                Text="{Binding TargetIp}" />

                            <TextBlock
                                Margin="0,0,0,2"
                                FontSize="10"
                                Foreground="#ECF0F1"
                                Text="Gateway" />
                            <TextBox
                                Margin="0,0,0,8"
                                Padding="3"
                                Text="{Binding TargetGateway}" />

                            <TextBlock
                                Margin="0,0,0,2"
                                FontSize="10"
                                Foreground="#ECF0F1"
                                Text="Primary DNS" />
                            <TextBox
                                Margin="0,0,0,8"
                                Padding="3"
                                Text="{Binding TargetDns}" />

                            <TextBlock
                                Margin="0,0,0,2"
                                FontSize="10"
                                Foreground="#BDC3C7"
                                Text="Alt DNS" />
                            <TextBox
                                Margin="0,0,0,10"
                                Padding="3"
                                Background="#95A5A6"
                                IsReadOnly="False"
                                Text="{Binding TargetAltDns}" />

                            <Button
                                Height="30"
                                Background="#E67E22"
                                BorderThickness="0"
                                Command="{Binding ChangeIpCommand}"
                                Content="APPLY IP SETTINGS"
                                Cursor="Hand"
                                FontWeight="Bold"
                                Foreground="White">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="3" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </Border>
                </Expander>

                <StackPanel Grid.Row="3" Margin="0,0,0,15">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="12"
                        Foreground="#BDC3C7"
                        Text="Package Preview:" />
                    <Border
                        Padding="5"
                        Background="#34495E"
                        CornerRadius="5">
                        <ListBox
                            Height="160"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#ECF0F1"
                            ItemsSource="{Binding PreviewList}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="5,2" />
                                    <Setter Property="FontSize" Value="11" />
                                    <Setter Property="IsHitTestVisible" Value="False" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>
                </StackPanel>

                <Button
                    Grid.Row="4"
                    Height="40"
                    Margin="0,0,0,10"
                    BorderThickness="0"
                    Command="{Binding RunDefenderCommand}"
                    Content="DISABLE DEFENDER"
                    Cursor="Hand"
                    FontSize="13"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2980B9" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3498DB" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#7F8C8D" />
                                    <Setter Property="Opacity" Value="0.5" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button
                    Grid.Row="5"
                    Height="45"
                    BorderThickness="0"
                    Command="{Binding InstallCommand}"
                    Content="START INSTALLATION"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#27AE60" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2ECC71" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#7F8C8D" />
                                    <Setter Property="Opacity" Value="0.6" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock
                    Grid.Row="6"
                    Margin="0,15,0,0"
                    HorizontalAlignment="Center"
                    FontSize="10"
                    Foreground="#95A5A6"
                    Text="Ensure Assets folder is present."
                    TextWrapping="Wrap" />
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="0,0,0,10"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="#34495E"
                Text="Activity Log" />

            <Border
                Grid.Row="1"
                Background="White"
                BorderBrush="#DCDCDC"
                BorderThickness="1"
                CornerRadius="5">
                <Grid>
                    <TextBox
                        Margin="10"
                        BorderThickness="0"
                        FontFamily="Consolas"
                        FontSize="13"
                        IsReadOnly="True"
                        Text="{Binding LogOutput}"
                        TextChanged="TextBox_TextChanged"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />

                    <Border Background="#AAFFFFFF" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="#2980B9"
                                Text="Processing..." />
                            <ProgressBar
                                Width="200"
                                Height="5"
                                Margin="0,10,0,0"
                                IsIndeterminate="True" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
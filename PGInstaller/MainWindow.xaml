<Window x:Class="PGInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PGInstaller.Viewmodel"
        mc:Ignorable="d"
        Title="PG Department Installer" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Background="#F0F2F5" FontFamily="Segoe UI">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50">
            <StackPanel Margin="20">
                <TextBlock Text="SETUP WIZARD" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,30"/>

                <TextBlock Text="Select Department" Foreground="#BDC3C7" FontSize="12" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Departments}" 
                          SelectedItem="{Binding SelectedDepartment}"
                          Height="40" FontSize="14" Padding="10,0"
                          VerticalContentAlignment="Center" Background="White" Margin="0,0,0,20">
                    <ComboBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>

                <Separator Background="#34495E" Margin="0,10,0,20"/>

                <Button Command="{Binding InstallCommand}" 
                        Content="START INSTALLATION"
                        Height="50" FontSize="14" FontWeight="Bold"
                        Foreground="White" Cursor="Hand" BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#27AE60"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2ECC71"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                    <Setter Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock Text="Please ensure Assets folder is present before starting." 
                           Foreground="#95A5A6" TextWrapping="Wrap" Margin="0,20,0,0" FontSize="11"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Installation Log" FontSize="18" FontWeight="SemiBold" Foreground="#34495E" Margin="0,0,0,10"/>

            <Border Grid.Row="1" Background="White" CornerRadius="5" BorderBrush="#DCDCDC" BorderThickness="1">
                <Grid>
                    <ScrollViewer x:Name="LogScroll" Margin="10">
                        <TextBox Text="{Binding LogOutput}" 
                                 IsReadOnly="True" 
                                 BorderThickness="0" 
                                 FontFamily="Consolas" 
                                 FontSize="13"
                                 TextWrapping="Wrap"
                                 TextChanged="TextBox_TextChanged"/>
                    </ScrollViewer>

                    <Border Background="#AAFFFFFF" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Installing..." FontSize="24" FontWeight="Bold" Foreground="#2980B9"/>
                            <ProgressBar IsIndeterminate="True" Width="200" Height="5" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
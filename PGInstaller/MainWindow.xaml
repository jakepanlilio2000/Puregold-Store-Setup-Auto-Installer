<Window
    x:Class="PGInstaller.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PGInstaller.Viewmodel"
    Title="PG-AIO Installer (Beta)"
    Width="1100"
    Height="750"
    Background="#F4F7F9"
    FontFamily="Segoe UI"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="ModernBtn" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            >
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding Content}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <DropShadowEffect
            x:Key="DropShadow"
            BlurRadius="5"
            Direction="270"
            Opacity="0.2"
            ShadowDepth="2" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,30">
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="PG INSTALLER" />
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="11"
                        Foreground="#BDC3C7"
                        Text="TARGET DEPARTMENT" />
                    <ComboBox
                        Height="40"
                        Padding="10,0"
                        VerticalContentAlignment="Center"
                        Background="White"
                        FontSize="14"
                        ItemsSource="{Binding Departments}"
                        SelectedItem="{Binding SelectedDepartment}">
                        <ComboBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </StackPanel>

                <Expander
                    Grid.Row="2"
                    Margin="0,0,0,20"
                    Foreground="White"
                    Header="NETWORK SETTINGS">
                    <Border
                        Margin="0,5,0,0"
                        Padding="15"
                        Background="#34495E"
                        CornerRadius="5">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="#ECF0F1"
                                        Text="IP ADDRESS" />
                                    <TextBox
                                        Margin="0,2,0,0"
                                        Padding="4"
                                        Text="{Binding TargetIp}" />
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="#ECF0F1"
                                        Text="GATEWAY" />
                                    <TextBox
                                        Margin="0,2,0,0"
                                        Padding="4"
                                        Text="{Binding TargetGateway}" />
                                </StackPanel>
                            </Grid>

                            <TextBlock
                                FontSize="10"
                                Foreground="#ECF0F1"
                                Text="PRIMARY DNS" />
                            <TextBox
                                Margin="0,2,0,15"
                                Padding="4"
                                Text="{Binding TargetDns}" />

                            <Button
                                Height="35"
                                Background="#E67E22"
                                Command="{Binding ChangeIpCommand}"
                                Content="APPLY CONFIG"
                                Style="{StaticResource ModernBtn}" />
                        </StackPanel>
                    </Border>
                </Expander>

                <Grid Grid.Row="3" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="11"
                        Foreground="#BDC3C7"
                        Text="INSTALL MANIFEST" />
                    <Border
                        Grid.Row="1"
                        Padding="5"
                        Background="#34495E"
                        CornerRadius="5">
                        <ListBox
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#ECF0F1"
                            ItemsSource="{Binding PreviewList}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="5,3" />
                                    <Setter Property="FontSize" Value="12" />
                                    <Setter Property="IsHitTestVisible" Value="False" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>
                </Grid>

                <Button
                    Grid.Row="4"
                    Height="55"
                    Background="#27AE60"
                    Command="{Binding InstallCommand}"
                    Content="START INSTALLATION"
                    FontSize="16"
                    Style="{StaticResource ModernBtn}" />

                <TextBlock
                    Grid.Row="5"
                    Margin="0,15,0,0"
                    HorizontalAlignment="Center"
                    FontSize="10"
                    Foreground="#7F8C8D"
                    Text="Ensure 'Assets' folder is present." />
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#7F8C8D"
                    Text="QUICK MAINTENANCE" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Height="50"
                        Background="#C0392B"
                        Command="{Binding RunDefenderCommand}"
                        Content="DISABLE DEFENDER"
                        Style="{StaticResource ModernBtn}" />

                    <Button
                        Grid.Column="2"
                        Height="50"
                        Background="#8E44AD"
                        Command="{Binding RunDebloatCommand}"
                        Content="DEBLOAT WINDOWS"
                        Style="{StaticResource ModernBtn}" />

                    <Button
                        Grid.Column="4"
                        Height="50"
                        Background="#2980B9"
                        Command="{Binding RunActivatorCommand}"
                        Content="ACTIVATE WINDOWS"
                        Style="{StaticResource ModernBtn}" />
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,0,0,25">
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#7F8C8D"
                    Text="MEDICINE CABINET" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ComboBox
                        Grid.Column="0"
                        Height="40"
                        Padding="10,0"
                        VerticalContentAlignment="Center"
                        Background="White"
                        BorderBrush="#BDC3C7"
                        FontSize="14"
                        ItemsSource="{Binding MedicineList}"
                        SelectedItem="{Binding SelectedMedicineName}">
                        <ComboBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>

                    <Button
                        Grid.Column="2"
                        Background="#34495E"
                        Command="{Binding RunMedicineCommand}"
                        Content="RUN TOOL"
                        Style="{StaticResource ModernBtn}" />
                </Grid>
            </StackPanel>

            <TextBlock
                Grid.Row="2"
                Margin="0,0,0,10"
                FontSize="14"
                FontWeight="Bold"
                Foreground="#7F8C8D"
                Text="LIVE TERMINAL" />

            <Border
                Grid.Row="3"
                Background="#1E1E1E"
                BorderBrush="#333"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <TextBox
                        Margin="15"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Consolas"
                        FontSize="13"
                        Foreground="#00FF00"
                        IsReadOnly="True"
                        Text="{Binding LogOutput}"
                        TextChanged="TextBox_TextChanged"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />

                    <Border Background="#CC2C3E50" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="PROCESSING REQUEST..." />
                            <ProgressBar
                                Width="300"
                                Height="4"
                                Margin="0,15,0,0"
                                Background="#34495E"
                                BorderThickness="0"
                                Foreground="#27AE60"
                                IsIndeterminate="True" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>